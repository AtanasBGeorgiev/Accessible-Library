@page
@model Library.Pages.ForgottenPasswordModel
@{
}

<head>
    <title>Смени паролата стъпка 1</title>
</head>

<body>
    <h1 style="text-align:center">Смени паролата си стъпка 1</h1>
    <h3 style="text-align:center">Ще получиш съобщение с код, който трябва да въведеш на следващата стъпка</h3>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <form method="post" style="padding-top:50px;">

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Имейл:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="email" value="" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid" style="margin-top:10px;">
                <button type="submit" class="btn btn-primary">ПРОВЕРИ</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/LoginLibrary" role="button" style="margin-top:10px;">ОТМЕНИ</a>
            </div>
        </div>

    </form>

</body>