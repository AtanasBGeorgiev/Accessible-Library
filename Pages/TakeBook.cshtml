@page
@model Library.Pages.TakeBookModel
@{
}

<head>
    <title>Вземи книга</title>
</head>

<body>
    <h1 style="text-align:center">Вземи книга</h1>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <a class='btn btn-primary btn-sm' href='/MainPage'>ИЗЛЕЗ ОТ ТУК</a>
                </div>
            </div>
        </div>
    }

    <form method="post" style="margin-bottom:650px;">
        <input type="hidden" name="id" value="@TakeBookModel.bookInfo.Id" />
        <input type="hidden" name="date" value="@TakeBookModel.bookInfo.DateOfTaking" />
        <input type="hidden" name="idBook" value="@TakeBookModel.idBook" />

        <br />
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Инвентарен номер:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@TakeBookModel.bookInfo.InventoryNum</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Заглавие:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="title" value='@TakeBookModel.bookInfo.Title'>@TakeBookModel.bookInfo.Title</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Автор:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="autor" value='@TakeBookModel.bookInfo.Author'>@TakeBookModel.bookInfo.Author</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Година на издаване:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="year" value='@TakeBookModel.bookInfo.Year'>@TakeBookModel.bookInfo.Year</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Сигнатура:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="signature" value='@TakeBookModel.bookInfo.Signature'>@TakeBookModel.bookInfo.Signature</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Дата:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@Model.date</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Имейл на читателя:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="email" value='' />
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">ПРОВЕРИ</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/MainPage" role="button">ОТМЕНИ</a>
            </div>
        </div>
    </form>

</body>
