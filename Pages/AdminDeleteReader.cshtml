@page
@model Library.Pages.AdminDeleteReaderModel
@{
    byte[] a;
}

@if ((!HttpContext.Session.TryGetValue("AdminId", out a)) && (!HttpContext.Session.TryGetValue("SystemAdminId", out a)))
{
    Response.Redirect("/Index");
}

<head>
    <title>Изтрий читател</title>
</head>

<body>
    <h1 style="text-align:center">Изтрий профила на читател.</h1>
    <br />
    <h3 style="text-align:center;color:red">
        ВНИМАНИЕ!<br />
        Ще изтриеш цялата информация за този профил<br />
        Преди да го направиш трябва да са върнати всички книги,взети от теб
    </h3>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <form method="post" style="margin-bottom:720px;">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Име:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@ReaderInfoForAdminModel.readerInfo.Name</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Фамилия:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@ReaderInfoForAdminModel.readerInfo.LastName</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Имейл:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@ReaderInfoForAdminModel.readerInfo.Email</label>
            </div>
        </div>

        <div class="row mb=3">
            <label class="col-sm-3 col-form-label">Телефон:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@ReaderInfoForAdminModel.readerInfo.Telephone</label>
            </div>
        </div>

        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@Model.successMessage</strong>
                        <a class="btn btn-outline-primary" href="/AdminReaders" role="button">ИЗЛЕЗ</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid" style="margin-top:10px;">
                    <button type="submit" class="btn btn-danger">ИЗТРИЙ</button>
                </div>
                <div class="col-sm-3 d-grid" style="margin-top:10px;">
                        <a class="btn btn-outline-primary" href="/AdminReaders" role="button">ВЪРНИ СЕ НАЗАД</a>
                    </div>
            </div>
        }
    </form>
</body>