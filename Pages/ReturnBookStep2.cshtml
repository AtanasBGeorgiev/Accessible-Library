@page
@model Library.Pages.ReturnBookStep2Model
@{
    byte[] a;
}

@if (!HttpContext.Session.TryGetValue("LibraryId", out a))
{
    Response.Redirect("/Index");
}

<head>
    <title>Върни книга 2</title>
</head>

<body>
    <h1 style="text-align:center">Върни книга</h1>
    <p style ="text-align:center;color:red">Това е последното местоположение на книгата в библиотеката.</p>
    <p style="text-align:center;color:red">Ако желаеш, можеш да го промениш.</p>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <a class='btn btn-primary btn-sm' href='/MainPage'>Излез</a>
                </div>
            </div>
        </div>
    }
    <form method="post" style="margin-bottom:700px;">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Заглавие на книга:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="title" value='@ReturnBookStep1Model.bookInfo.Title'>@ReturnBookStep1Model.bookInfo.Title</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Автор:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="autor" value='@ReturnBookStep1Model.bookInfo.Author'>@ReturnBookStep1Model.bookInfo.Author</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Година:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="autor" value='@ReturnBookStep1Model.bookInfo.Year'>@ReturnBookStep1Model.bookInfo.Year</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Сигнатура:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="signature" value='@ReturnBookStep1Model.bookInfo.Signature' />
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">ПРИКЛЮЧИ</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/MainPage" role="button">ОТМЕНИ</a>
            </div>
        </div>
    </form>
</body>