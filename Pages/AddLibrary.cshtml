@page
@model Library.Pages.AddLibraryModel
@{
}

<head>
    <title>Нова библиотека</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container">
                <div style="text-align:left;margin-right:30px;">
                    <img id="logo" class="image-class" src="/Logo.png" width="50" />
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" style="text-align:right;margin:20px 20px 50px 10px;">
                        <img id="logo" class="image-class" src="/NavMenu.png" width="30" />
                    </button>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between position-absolute top-0 end-0">
                    <ul class="navbar-nav flex-grow-1" style="font-size:larger">
                        <li class="nav-item">
                            <a style="color:#2ECC71" class="nav-link" asp-page="/Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:#2ECC71" class="nav-link" asp-page="/LoginLibrary">Вход/Регистрация</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:#2ECC71" class="nav-link" asp-page="/Contacts">Контакти</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <h1 style="text-align:center">Нова библиотека</h1>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                </div>
            </div>
        </div>
    }

    <form method="post" style="margin-bottom:500px;">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Име на читалище/библиотека(Задължително се пише в кавички!):</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="name" value='""' />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Град/Село(Пише се само името на населеното място(не се пише град/село)!):</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="cityVillage" value="" />
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Община:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="municipality" value="" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Област:</label>
            <select class="position-absolute  start-50 translate-middle" name="district" style="width: 150px; text-align: center;">
                <option value="София-град">София-град</option>
                <option value="Пловдив">Пловдив</option>
                <option value="Варна">Варна</option>
                <option value="Бургас">Бургас</option>
                <option value="Стара Загора">Стара Загора</option>
                <option value="Благоевград">Благоевград</option>
                <option value="Софийска област">Софийска област</option>
                <option value="Пазарджик">Пазарджик</option>
                <option value="Плевен">Плевен</option>
                <option value="Хасково">Хасково</option>
                <option value="Велико Търново">Велико Търново</option>
                <option value="Русе">Русе</option>
                <option value="Сливен">Сливен</option>
                <option value="Враца">Враца</option>
                <option value="Добрич">Добрич</option>
                <option value="Кълджали">Кълджали</option>
                <option value="Шумен">Шумен</option>
                <option value="Монтана">Монтана</option>
                <option value="Ловеч">Ловеч</option>
                <option value="Перник">Перник</option>
                <option value="Кюстендил">Кюстендил</option>
                <option value="Ямбол">Ямбол</option>
                <option value="Разград">Разград</option>
                <option value="Търговище">Търговище</option>
                <option value="Габрово">Габрово</option>
                <option value="Силистра">Силистра</option>
                <option value="Смолян">Смолян</option>
                <option value="Видин">Видин</option>
            </select>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Имейл:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="email" value="" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Телефон:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="telephone" value="" />
            </div>
        </div>
        <p style="color:red;text-align:center">В адреса запиши и името на града/селото.</p>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Адрес:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="address" value="" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Парола:</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" name="password" value="" id="myInput" /><br><br>
                <p style="color:red">
                     Паролата трябва да съдържа поне:<br />
                     -една главна и една малка буква на български и латински<br />
                     -една цифра<br />
                     -един специален символ (#,?,!,$,^,&,* или -)<br />
                     -8+ символа дължина
                 </p>
                <input type="checkbox" onclick="myFunction()" />Покажи паролата
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Потвърди парола:</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" name="confirmPassword" value="" id="myInput2" /><br><br>
                <input type="checkbox" onclick="myFunction2()" />Покажи паролата
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid" style="margin-top:10px;">
                <button type="submit" class="btn btn-primary">СЪЗДАЙ</button>
            </div>
            <div class="col-sm-3 d-grid" style="margin-top:10px;">
                <a class="btn btn-outline-primary" href="/Index" role="button">ОТМЕНИ</a>
            </div>
        </div>

    </form>
</body>