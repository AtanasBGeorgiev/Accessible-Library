@page
@model Library.Pages.DeleteLibraryModel
@{
    byte[] a;
}

@if (!HttpContext.Session.TryGetValue("LibraryId", out a))
{
    Response.Redirect("/Index");
}

<head>
    <title>Изтрий библиотека</title>
</head>

<body>
    <h1 style="text-align:center">Изтрий профила си</h1>
    <br />
    <h3 style="text-align:center;color:red">ВНИМАНИЕ!<br />
        Ще изтриеш цялата информация,свързана с библиотеката си.
        Включително и информацията за книгите й.
    </h3>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <form method="post" style="margin-bottom:500px;">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Име на читалище/библиотека:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@LoginLibraryModel.libraryInfo.Name</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Град/Село:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@LoginLibraryModel.libraryInfo.CityVillage</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Община:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@LoginLibraryModel.libraryInfo.Municipality</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Област:</label>
            <label class="col-sm-3 col-form-label">@LoginLibraryModel.libraryInfo.District</label>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Имейл:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@LoginLibraryModel.libraryInfo.Email</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Телефон:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@LoginLibraryModel.libraryInfo.Telephone</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Адрес:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@LoginLibraryModel.libraryInfo.Address</label>
            </div>
        </div>

        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9" style="margin-top:10px;">
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@Model.successMessage</strong>
                        <a class="btn btn-outline-primary" href="/Index" role="button">ИЗЛЕЗ</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid" style="margin-top:10px;">
                    <button type="submit" class="btn btn-danger">ИЗТРИЙ</button>
                </div>
                <div class="col-sm-3 d-grid" style="margin-top:10px;">
                    <a class="btn btn-outline-primary" href="/MainPage" role="button">ВЪРНИ СЕ НАЗАД</a>
                </div>
            </div>
        }
    </form>
</body>