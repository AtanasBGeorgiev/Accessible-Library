@page
@model Library.Pages.AdminAddBookModel
@{
    byte[] a;
}

@if ((!HttpContext.Session.TryGetValue("SystemAdminId", out a)) && (!HttpContext.Session.TryGetValue("AdminId", out a)))
{
    Response.Redirect("/Index");
}

<head>
    <title>Добави книга</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container">
                <div style="text-align:left;margin-right:30px;">
                    <img id="logo" class="image-class" src="/Logo.png" width="50" />
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" style="text-align:right;margin:20px 20px 50px 10px;">
                        <img id="logo" class="image-class" src="/NavMenu.png" width="30" />
                    </button>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between position-absolute top-0 end-0">
                    <ul class="navbar-nav flex-grow-1" style="font-size:larger">
                        <li class="nav-item">
                            <a style="color:#2ECC71" class="nav-link" asp-page="/AdminBooksOfLibrary">Книгите на библиотеката</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:#2ECC71" class="nav-link" asp-page="/DeductedBooksAdmin">Отчислени книги</a>
                        <li class="nav-item">
                            <a style="color:#2ECC71" class="nav-link" asp-page="/AdminAddBook">Добави книга</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:#2ECC71" class="nav-link" asp-page="/AdminReturnBookStep1">Върни книга</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="content">
        <h1 style="text-align:center">Добави книга</h1>

        @if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.errorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@Model.successMessage</strong>
                    </div>
                </div>
            </div>
        }

        <form method="post" style="margin-bottom:600px;">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Инвентарен номер:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="inventoryNum" value='' />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Заглавие на книга:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="title" value='""' />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Автор:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="author" value='' />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Година на издаване:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="year" value='' />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Цена (лв.):</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="price" value='' />
                </div>
            </div>
            <p style="text-align:center;color:red">При въвеждането на цена използвай запетайка за отделянето на стотинки от левове(не използвай при цели суми)!Пример: 10 за цяла сума и 10,52 за дробна.</p>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Категория:</label>
                <select class="position-absolute  start-50 translate-middle" name="category" style="width: 150px; text-align: center;">
                    <option value="Литература">Литература</option>
                    <option value="Детска литература">Детска литература</option>
                    <option value="Исторически">Исторически</option>
                    <option value="Архитектура и строителство">Архитектура и строителство</option>
                    <option value="Образование">Образование</option>
                    <option value="Военно дело">Военно дело</option>
                    <option value="Информационни тхнологии">Информационни технологии</option>
                    <option value="Селско стопанство">Селско стопанство</option>
                    <option value="Биография">Биография</option>
                    <option value="Изкуство">Изкуство</option>
                    <option value="Икономика">Икономика</option>
                    <option value="Фентъзи">Фентъзи</option>
                    <option value="Други">Други</option>
                </select>
            </div>

            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Сигнатура:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="signature" value='' />
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <button type="submit" class="btn btn-primary">ДОБАВИ</button>
                </div>
                <div class="col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="AdminBooksOfLibrary" role="button">ОТМЕНИ/ВЪРНИ СЕ НАЗАД</a>
                </div>
            </div>
        </form>
    </div>
</body>
