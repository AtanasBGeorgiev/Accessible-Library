@page
@model Library.Pages.AdminDeleteBookModel
@{
    byte[] a;
}

@if ((!HttpContext.Session.TryGetValue("AdminId", out a))&&(!HttpContext.Session.TryGetValue("SystemAdminId", out a)))
{
    Response.Redirect("/Index");
}

<head>
    <title>Изтрий книга</title>
</head>

<body>
    <h1 style="text-align:center">Отчисли книга от библиотеката</h1>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                     <a class='btn btn-primary btn-sm' href='/AdminBooksOfLibrary'>ИЗЛЕЗ ОТ ТУК</a>
                </div>
            </div>
        </div>
    }

    <form method="post" style="margin-bottom:550px;">
        <input type="hidden" name="id" value="@AdminDeleteBookModel.bookInfo.Id" />
        
        <br />
        
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Инвентарен номер:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@AdminDeleteBookModel.bookInfo.InventoryNum</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Заглавие:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="title" value='@AdminDeleteBookModel.bookInfo.Title'>@AdminDeleteBookModel.bookInfo.Title</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Автор:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="autor" value='@AdminDeleteBookModel.bookInfo.Author'>@AdminDeleteBookModel.bookInfo.Author</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Година на издаване:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="year" value='@AdminDeleteBookModel.bookInfo.Year'>@AdminDeleteBookModel.bookInfo.Year</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Цена:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="price" value='@AdminDeleteBookModel.bookInfo.Price'>@AdminDeleteBookModel.bookInfo.Price</></label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Категория:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="category" value='@DeleteBookModel.bookInfo.Category'>@DeleteBookModel.bookInfo.Category</></label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Сигнатура:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="signature" value='@AdminDeleteBookModel.bookInfo.Signature'>@AdminDeleteBookModel.bookInfo.Signature</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Проведена инвентаризация:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label" name="inventory" value='@AdminDeleteBookModel.bookInfo.Inventory'>@AdminDeleteBookModel.bookInfo.Inventory</label>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Отчисляване-номер и дата:</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="removal" value='' />
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">ОТЧИСЛИ</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href='/AdminBooksOfLibrary'>ОТМЕНИ</a>
            </div>
        </div>
    </form>
</body>