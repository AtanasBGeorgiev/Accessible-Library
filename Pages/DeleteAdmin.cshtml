@page
@model Library.Pages.DeleteAdminModel
@{
    byte[] a;
}

@if (!HttpContext.Session.TryGetValue("SystemAdminId", out a))
{
    Response.Redirect("/Index");
}

<head>
    <title>Изтрий администратор</title>
</head>

<body>
    <h1 style="text-align:center">Изтрий профила на администратор</h1>
    <br />
    <h3 style="text-align:center;color:red">
        ВНИМАНИЕ!<br />
        Ще изтриеш цялата информация за този профил.<br />
    </h3>

    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <form method="post" style="margin-bottom:650px;">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Име:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@AdminInfoModel.adminInfo.Name</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Презме:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@AdminInfoModel.adminInfo.Surname</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Фамилия:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@AdminInfoModel.adminInfo.LastName</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Имейл:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@AdminInfoModel.adminInfo.Email</label>
            </div>
        </div>

        <div class="row mb=3">
            <label class="col-sm-3 col-form-label">Телефон:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@AdminInfoModel.adminInfo.Telephone</label>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Потребителско име:</label>
            <div class="col-sm-6">
                <label class="col-sm-3 col-form-label">@AdminInfoModel.adminInfo.UserName</label>                
            </div>
        </div>

        @if (Model.successMessage.Length > 0)
        {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class='alert alert-success alert-dismissible fade show' role='alert'>
                        <strong>@Model.successMessage</strong>
                            <a class="btn btn-outline-primary" href="/Admins" role="button">ИЗЛЕЗ</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <button type="submit" class="btn btn-danger">ИЗТРИЙ</button>
                </div>
                <div class="col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/Admins" role="button">ВЪРНИ СЕ НАЗАД</a>
                </div>
            </div>
        }
    </form>
</body>